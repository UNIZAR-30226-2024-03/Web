		function nextSongFunction(){
				const queue = JSON.parse(localStorage.getItem("songsQueue"))
				if(queue != null && queue.length != []){
					window.dispatchEvent(new Event('nextSong'))
					setTimeout(() => {
							var event = new Event("playSong");
							document.dispatchEvent(event);			
						}, 1300);
				}else{
					let playlist = JSON.parse(localStorage.getItem("playlist"))
					const loop = JSON.parse(localStorage.getItem('loop'))
					if(playlist.ind != playlist.canciones.length-1 || (playlist.ind == playlist.canciones.length-1 && loop)){
						localStorage.setItem("cancion", playlist.canciones[(playlist.ind+1)%playlist.canciones.length].id)
						playlist.ind = (playlist.ind+1)%playlist.canciones.length
						localStorage.setItem("playlist", JSON.stringify(playlist))
						window.dispatchEvent(new Event('nextSongPlaylist'))
						setTimeout(() => {
							var event = new Event("playSong");
							document.dispatchEvent(event);			
						}, 1300);
					}else{
						document.dispatchEvent(new Event('stopSong'))
					}

				}
		}
		setTimeout(	() => {	
			const nextSong = document.querySelector('.nextSong');
			nextSong.addEventListener('click', () => {

				nextSongFunction()
}			)}, 1000);
		setTimeout(	() => {	
			const audioPlayer = document.getElementById('audioPlayer');
			audioPlayer?.addEventListener('ended', () => {
				nextSongFunction()
			});
		}, 1000);
	});
		const buton = document.querySelectorAll('.button');
		const itemsOpt = document.querySelectorAll('.dropdown span');
		for(let i = 0; i < itemsOpt.length; i++){
			itemsOpt[i].addEventListener('mousedown', (e) => {
			e.preventDefault()
			})
			if(itemsOpt[i].innerText === "AÃ±adir cola"){
				itemsOpt[i].addEventListener('click', () => {
					let songsQueue = localStorage.getItem('songsQueue');
					if(songsQueue === null){
						songsQueue = [];
					}else{
						songsQueue = JSON.parse(songsQueue);
					}
					const td = itemsOpt[i].parentNode.parentNode.parentNode.parentNode;
					const obj = {id: td.id, titulo: td.children[0].innerText, duracionSeg: td.children[3].innerText};
					songsQueue.push(obj);

					localStorage.setItem('songsQueue', JSON.stringify(songsQueue));
					for(let j= 0; j<buton.length; j++){
						buton[j].blur()
					}
					window.dispatchEvent(new Event('storageChange'));
				})
			}
		
		}
	
  
	
  
